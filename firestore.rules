rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Rules for Dyse Application ---

    // Users can only access their own private documents and cover letters
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read from the publicShares collection for viewing
    match /publicShares/{shareId} {
      allow read: if true;
      
      // Only the authenticated owner can create a public share
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      
      // Only the authenticated owner can update or delete an *existing* public share
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // --- Existing Rule for Other Application ---

    // Anyone can read visit counters, but no one can write directly
    match /artifacts/interactcv/public/data/visitCounters/{docId} {
      allow read: if true;
      allow create, update, delete: if false;
    }
  }
}